  pinMode (but1, INPUT);
  pinMode (photo, INPUT);
  pinMode (buz, OUTPUT);
  Serial.begin(9600);
  lcd.begin(16,2);
  lcd.init();
  lcd.backlight();
  lcd.init();
}

void loop() {

  	int li = analogRead(photo);
  	Serial.print("Pht");
  	Serial.println(li);
  
  if (li >= 20){
    digitalWrite(buz, HIGH);
    lcd.setCursor(0, 0);
    lcd.print("LIGHT ON");
  }
  else {
    digitalWrite(buz, LOW);
    lcd.setCursor(0, 0);
    lcd.print("LIGHT OFF");
  }
  
}







//SIXA
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(32,16,2);


int ldr = A0;
int but1 = 7;
int MODE = 0;
int buz = 10;

void setup(){
  pinMode (but1, INPUT);
  pinMode (ldr, INPUT);
  pinMode (buz, OUTPUT);
  Serial.begin(9600);
  lcd.begin(16,2);
  lcd.init();
  lcd.backlight();
  lcd.init();
}

void loop() {

  	int li = analogRead(ldr);
  	Serial.print("ldr");
  	Serial.println(li);
  
  if (li >= 60){
    digitalWrite(buz, HIGH);
    lcd.setCursor(0, 0);
    lcd.print("LIGHT ON");
  }
  else {
    digitalWrite(buz, LOW);
    lcd.setCursor(0, 0);
    lcd.print("LIGHT OFF");
  }
  
}
